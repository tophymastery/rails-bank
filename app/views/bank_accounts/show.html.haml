%h1
  Account Number: #{@bank_account.account_number}
  %small 
    #{@bank_account.client}

%table.table.table-bordered
  %thead
    %tr
      %th Date of Transaction
      %th Transaction Type
      %th Amount
  %tbody
    - @bank_account.account_transactions.each do |t|
      %tr
        %td #{t.created_at}
        %td #{t.transaction_type}
        %td #{number_to_currency(t.amount, unit: "P")}